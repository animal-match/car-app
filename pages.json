{
	"easycom": {
		"^u-(.*)": "uview-ui/components/u-$1/u-$1.vue"
	},
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/index/index",
			"style": {
				"navigationBarTitleText": "一条龙信息对接平台"
			}
		},
		{
			"path": "pages/require/index",
			"style": {
				"navigationBarTitleText": "供求"
			}
		},
		{
			"path": "pages/merchants/index",
			"style": {
				"navigationBarTitleText": "商家"
			}
		},
		{
			"path": "pages/me/index",
			"style": {
				"navigationBarTitleText": "我的"
			}
		},
		{
			"path": "pages/me/my-supply-info/index",
			"style": {
				"navigationBarTitleText": "我的供应信息",
				"enablePullDownRefresh": true
			}
		},
		{
			"path": "pages/me/distributor/index",
			"style": {
				"navigationBarTitleText": "分销商"
			}
		},
		{
			"path": "pages/me/distributor/fetch/index",
			"style": {
				"navigationBarTitleText": "提现"
			}
		}
	],

	"globalStyle": {
		"navigationBarTextStyle": "white",
		"navigationBarTitleText": "一条龙信息对接平台",
		"navigationBarBackgroundColor": "#CA0303",
		"backgroundColor": "#F8F8F8",
		"backgroundTextStyle": "light"
	},
	"tabBar": {
		"color": "#1A1A1A",
		"selectedColor": "#b50e03",
		"backgroundColor": "#EBEBEB",
		"list": [{
				"text": "首页",
				"pagePath": "pages/index/index",
				"iconPath": "static/tabbar-icons/home.png",
				"selectedIconPath": "static/tabbar-icons/home_act.png"
			},
			{
				"text": "供求",
				"pagePath": "pages/require/index",
				"iconPath": "static/tabbar-icons/news.png",
				"selectedIconPath": "static/tabbar-icons/news_act.png"
			},
			{
				"text": "商家",
				"pagePath": "pages/merchants/index",
				"iconPath": "static/tabbar-icons/merchant.png",
				"selectedIconPath": "static/tabbar-icons/merchant_act.png"
			},
			{
				"text": "我的",
				"pagePath": "pages/me/index",
				"iconPath": "static/tabbar-icons/me.png",
				"selectedIconPath": "static/tabbar-icons/me_act.png"
			}
		]
	}
}
